<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="administrator" version="2.5" method="upgrade">
	<name>SocialConnect Counters (by JoomlaWorks)</name>
	<author>JoomlaWorks</author>
	<creationDate>December 11th, 2013</creationDate>
	<copyright>Copyright (c) 2006 - 2013 JoomlaWorks Ltd. All rights reserved.</copyright>
	<authorEmail>please-use-the-contact-form@joomlaworks.net</authorEmail>
	<authorUrl>www.joomlaworks.net</authorUrl>
	<version>1.5.1</version>
	<license>http://www.joomlaworks.net/license</license>
	<description>JW_SC_BACKEND_MOD_DESC</description>
	<files>
		<filename module="mod_socialconnect">mod_socialconnect.php</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="cache" type="hidden" default="0" />
				<field name="socialConnectCache" type="list" default="0" label="JW_MOD_CACHING" description="JW_MOD_CACHING_DESC">
					<option value="0">JW_MOD_NO_CACHING</option>
					<option value="1">JW_MOD_USE_GLOBAL</option>
				</field>
				<field name="cache_time" type="text" size="4" default="900" label="JW_MOD_CACHE_TIME" description="JW_MOD_CACHE_TIME_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>
